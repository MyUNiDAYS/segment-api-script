{
  "title": "Filter for Application Opened",
  "description": "Filter for Application Opened events to allow the context properties to be passed through to Bloomreach",
  "if": "event='Application Opened'",
  "enabled": true,
  "actions": [
    {
      "type": "ALLOW_PROPERTIES",
      "fields": {
        "context": [
          "context_app_version",
          "context_device_id",
          "context_device_manufacturer",
          "context_device_model",
          "context_device_name",
          "context_device_type",
          "context_locale",
          "context_os_name",
          "context_os_version"
        ]
      }
    }
  ]
}
